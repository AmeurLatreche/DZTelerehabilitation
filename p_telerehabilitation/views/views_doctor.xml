<odoo>
  <data>

      <record id="pt_doctor_view_form" model="ir.ui.view">
          <field name="name">pt_doctor_view_form</field>
          <field name="model">pt_doctor</field>
          <field name="arch" type="xml">
              <form string="pt_doctor_form">
                 <sheet>

                    <field name="image" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;: &quot;image_medium&quot;, &quot;size&quot;: [90, 90]}"/>
                    <div class="oe_title">

                        <h4>
                             <label for="name" class="oe_edit_only" />
                            <h4><field name="name" required="1"/></h4>
                           <h4>
                                 <label for="email" class="oe_edit_only" />
                            <field name="login" required="1"/></h4>
                         <h4>
                               <label for="password" class="oe_edit_only" />
                            <field name="password"  password="True" /></h4>

                        </h4>
                        <div class="o_row">

                        </div>
                    </div>

                    <group>
                        <group>
                            <field name="date_of_Birth"/>
                            <field name="National_ID"/>
                            <field name="blood_group" />
                            <field name="job" />


                        </group>
                        <group>
<!--                            <field name="function" />-->
                            <field name="phone" widget="phone"/>
                            <field name="mobile" widget="phone"/>
                            <field name="email" widget="email" context="{'gravatar_image': True}" />
                            <field name="gender" />
                         </group>
                    </group>

                    <notebook colspan="4">



                          <page string="note">
                              <group>
                                  <field name="note" />
                              </group>
                          </page>
                        <page string="gg" invisible="1" >
                              <group>
                                  <field name="groups_id" invisible="1" />
                              </group>
                          </page>
                      </notebook>
                  </sheet>
              </form>
          </field>
      </record>
      <record id="pt_doctor_view_tree" model="ir.ui.view">
          <field name="name">pt_doctor_view_tree</field>
          <field name="model">pt_doctor</field>
          <field name="arch" type="xml">
              <tree string="_tree">
                  <field name="name"/>
              </tree>
          </field>
      </record>

      <record id="pt_doctor_action" model="ir.actions.act_window">
          <field name="name">doctor</field>
          <field name="type">ir.actions.act_window</field>
          <field name="res_model">pt_doctor</field>
          <field name="view_mode">tree,form</field>
      </record>
      <!-- This Menu Item must have a parent and an action -->
      <menuitem id="root_pt" name="pt"  sequence=""/>
      <menuitem id="pt_doctor" string="doctor" name="doctor" parent="root_pt" action="pt_doctor_action" sequence="" groups="p_telerehabilitation.pt_user" />

  </data>
</odoo>